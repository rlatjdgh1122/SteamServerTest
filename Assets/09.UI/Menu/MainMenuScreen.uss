#popup-panel {
    position: absolute;
    flex-grow: 0;
    width: 100%;
    height: 100%;
    align-items: center;
    justify-content: center;
    transition-duration: 0.5s;
    visibility: hidden;
    opacity: 0;
    background-color: rgba(255, 0, 0, 0.78);
}

#popup-panel.on {
    background-color: rgba(72, 72, 72, 0.84);
    visibility: visible;
    opacity: 1;
}
